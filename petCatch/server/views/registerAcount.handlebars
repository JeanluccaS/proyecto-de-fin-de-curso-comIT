<div>

    <form class="miForm col-lg-4 offset-lg-4  " action="/registerAcount" method="POST">
        <div class="form-group">
            <label for="user">Usuario</label>
            <input type="text" class="form-control" name="user" id="user">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="text" class="form-control" name="password"id="password">
        </div>
        <div class="form-group">
            <label for="passwordConfirm">Confirmar Contraseña</label>
            <input type="text" class="form-control"  name="passwordConfirm" id="passwordConfirm">
        </div>
        <button class="btn btn-warning" type="submit">Registrarse</button>
    </form>

</div>
{{#if message}}
<p class="mensaje-{{message.class}}">{{message.text}}</p>
{{/if}}